<a class="carouside-item" href="{full-link}">
	<div class="carouside-img img-box">
		<img src="{poster src='[xfvalue_poster]' default='/uploads/mini/noimage.jpg' width='220' height='310' q='80' zoom='no' jpg='yes'}" alt="{title}" />
			<div class="poster-label">[xfvalue_premera]</div>
	</div>
	<div class="carouside-title">
		<p class="nowrap">{title limit="40"}</p>
		<span>[xfvalue_orig-title]</span>
	</div>
</a>